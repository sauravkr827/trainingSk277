--><project name="trainingSk277backoffice_buildcallbacks">
    	
    <property name="trainingSk277backofficeWebFragmentSrc" value="${ext.trainingSk277backoffice.path}/resources/web-fragment.xml"/>
    	
    <property name="trainingSk277backofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_trainingSk277backoffice.jar"/>
    	
    <macrodef name="trainingSk277backoffice_after_clean">
        		
        <sequential>
            			
            <trainingSk277backoffice_remove_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="trainingSk277backoffice_after_build">
        		
        <sequential>
            			
            <trainingSk277backoffice_remove_web_fragment/>
            			
            <trainingSk277backoffice_create_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="trainingSk277backoffice_remove_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${trainingSk277backofficeWebFragmentDestJar}"/>
                				
                <then>
                    					
                    <delete file="${trainingSk277backofficeWebFragmentDestJar}"/>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="trainingSk277backoffice_create_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${trainingSk277backofficeWebFragmentSrc}"/>
                				
                <then>
                    					
                    <sequential>
                        						
                        <jar destfile="${trainingSk277backofficeWebFragmentDestJar}">
                            							
                            <metainf file="${trainingSk277backofficeWebFragmentSrc}"/>
                            						
                        </jar>
                        					
                    </sequential>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <patternset id="trainingSk277backoffice.localization.pattern">
        		
        <!-- core and hmc  -->
        		
        <include name="**/*locales*_en.properties"/>
        		
        <exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
        		
        <exclude name="**/unittest/**/*"/>
        		
        <!-- cockpit (ng) -->
        		
        <include name="**/i3-label_en.properties"/>
        		
        <include name="**/labels_en.properties"/>
        		
        <!-- messages -->
        		
        <include name="**/*messages_en.properties"/>
        		
        <include name="**/*messages.properties"/>
        		
        <!-- frontend properties files in WEB-INF/messages folder -->
        		
        <include name="**/WEB-INF/messages/*_en.properties"/>
        		
        <!-- csv and impex -->
        		
        <include name="**/*_en.csv"/>
        		
        <include name="**/*_en.impex"/>
        		
        <include name="**/lang-en.properties"/>
        		
        <!-- email localizations from yacceleratorcore -->
        		
        <include name="resources/**/messages/*_en.properties"/>
        		
        <!-- include validation messages -->
        		
        <include name="resources/**/ValidationMessages.properties"/>
        	
    </patternset>
    	
    <macrodef name="trainingSk277backoffice_before_build">
        		
        <sequential>
            			
            <register_sass_extension extensionname="trainingSk277backoffice"/>
            			
            <register_sass_extension destination="" extensionname="trainingSk277backoffice" resources="resources"/>
            		
        </sequential>
        	
    </macrodef>
    
</project>
